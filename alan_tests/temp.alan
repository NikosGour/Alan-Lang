solve () : proc
    hanoi (rings : int, source : reference byte [], target : reference byte [], auxiliary : reference byte [],pes :int) : proc

        move (source : reference byte [], target : reference byte[]) : proc
        {
            writeString("Moving from ");
            writeString(source);
            writeString(" to ");
            writeString(target);
            writeString(".\n");
        }

    { -- hanoi
        if (rings >= 1) {
            hanoi(rings-1, source, auxiliary, target,rings);
            move(source, target);
            hanoi(rings-1, auxiliary, target, source,rings);
        }
    } -- hanoi

    NumberOfRings : int;

{ -- solve
    writeString("Rings: ");
    NumberOfRings = readInteger();
    hanoi(NumberOfRings, "left", "right", "middle",NumberOfRings);
} -- solve