bsort (n : int, x : reference int []) : proc

    swap (x : reference int, y : reference int) : proc
        t : int;
    {
        t = x;
        x = y;
        y = t;
    }

    changed : byte;

    i : int;

{ -- bsort
    changed = 'y';
    while (changed == 'y') {
        changed = 'n';
        i = 0;
        while (i < n-1) {
            if (x[i] > x[i+1]) {
                swap(x[i], x[i+1]);
                changed = 'y';
            }
            i = i + 1;
        }
    }
} -- bsort